@model Store.Web.App.BookModel

@{
    ViewData["Title"] = "BookDetails";
}

<div class="container">
    <div class="col-6 border mx-auto">
        <h2 class="text-center">@Model.Title</h2>
        <dl>
            <div class="row">
                <dt class="col-4">@Html.DisplayNameFor(s => s.Author)</dt>
                <dd class="col-8">@Model.Author</dd>
            </div>
            <div class="row">
                <dt class="col-4">@Html.DisplayNameFor(s => s.Isbn)</dt>
                <dd class="col-8">@Model.Isbn</dd>
            </div>
            <div class="row">
                <dt class="col-4">@Html.DisplayNameFor(s => s.Description)</dt>
                <dd class="col-8">@Model.Description</dd>
            </div>
            <div class="row">
                <dt class="col-4">@Html.DisplayNameFor(s => s.Price)</dt>
                <dd class="col-8">@Model.Price</dd>
            </div>
        </dl>
        <form class="text-center" action="@Url.Action("AddItem", "Order")" method="post">
            <input type="hidden" name="bookId" value="@Model.Id"/>
            <div class="form-inline ">
                <label for="count" class="mr-2">Количество</label>
                <input class="form-control w-25 mr-3" id="count" name="count" placeholder="Кол-во" min="1" value="1"/>
                <button class="btn btn-outline-success" type="submit">Добавить в корзину</button>
            </div>
        </form>
    </div>
    <div class="mt-3">
        <a asp-controller="Search" asp-action="Index" class="btn btn-primary ">Go back</a>
    </div>
</div>