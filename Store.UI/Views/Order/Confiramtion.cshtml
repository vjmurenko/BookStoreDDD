@model ConfirmationModel
@{
    ViewData["Title"] = "Подтверждение телефона";
}
<h1>Подтверждение мобильного телефона</h1>
<div class="w-50">
    <form asp-action="StartDelivery">
        <div class="form-group">
            <input type="hidden" name="orderId" value="@Model.OrderId">
            <input type="hidden" name="phoneNumber" value="@Model.PhoneNumber"/>
            <label for="code">Введите код подтверждения</label>
            <input type="text" id="code" class="form-control" name="code" placeholder="0000"/>
            @if (Model.Errors.Any())
            {
                <small class="text-danger">
                    @foreach (var error in Model.Errors.Select(s => s.Value))
                    {
                        @error
                        <br/>
                    }
                </small>
            }
        </div>
        <button class="btn btn-success" type="submit">Отправить</button>
    </form>
    <form asp-action="SendCode">
        <div class="form-group">
            <input type="hidden" name="orderId" value="@Model.OrderId">
            <label for="phoneNumber">Введите номер телефона для повторной отправки</label>
            <input type="tel" id="phoneNumber" name="phoneNumber" class="form-control" value="@Model.PhoneNumber">
        </div>
        <button class="btn btn-success" type="submit">Отправить код повторно</button>
    </form>
</div>